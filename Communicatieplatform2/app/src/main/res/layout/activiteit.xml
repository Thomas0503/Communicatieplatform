<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Activiteit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vriendenDerBlinden">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/logo"
        app:civ_border_color="@color/vriendenDerBlinden"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Dagboek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:text="Activiteit toevoegen"
        android:textColor="#FBDAD9"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="0dp"
        android:layout_height="51dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="40dp"
        android:background="#AF827E"
        android:endColor="#5E7C07"
        android:progressBackgroundTint="#150D0D"
        android:startColor="#CD0A0A"
        android:thumbTint="#F44336"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stressniveau" />

    <Button
        android:id="@+id/afbeeldingToevoegen"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="5dp"
        android:backgroundTint="#832E2E"
        android:text="voeg afbeelding toe"
        app:layout_constraintBottom_toTopOf="@+id/opslaanActi"
        app:layout_constraintEnd_toStartOf="@+id/toegevoegdeAfbeelding"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar" />

    <Button
        android:id="@+id/opslaanActi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#832E2E"
        android:text="opslaan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toegevoegdeAfbeelding" />

    <TextView
        android:id="@+id/stressniveau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:text="Stressniveau:"
        android:layout_marginTop="10dp"

        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3" />

    <TextView
        android:id="@+id/kiesActiviteit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="10dp"

        android:fontFamily="sans-serif"
        android:text="Activiteit:"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/omschrijving" />


    <TextView
        android:id="@+id/kiesSignaal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:text="Stresssignaal:"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="307dp"
        android:layout_height="105dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kiesActiviteit">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/activiteit1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:buttonTint="#FFFFFF"
                    android:text="Bench"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/activiteit2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:buttonTint="#FFFFFF"
                    android:text="Dierenarts"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/activiteit3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:buttonTint="#FFFFFF"
                    android:text="Houdingen"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/activiteit4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:buttonTint="#FFFFFF"
                    android:text="Kinderen"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/activiteit5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:buttonTint="#FFFFFF"
                    android:text="Korte lijn zonder prikkels"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/activiteit6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:buttonTint="#FFFFFF"
                    android:text="Korte lijn met prikkels"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/activiteit7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:buttonTint="#FFFFFF"
                    android:text="Mee naar het werk"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/activiteit8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:buttonTint="#FFFFFF"
                    android:text="Op dingen springen / onder dingen kruipen"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/activiteit9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:buttonTint="#FFFFFF"
                    android:text="Stofzuiger"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/activiteit10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:buttonTint="#FFFFFF"
                    android:text="Tafeloefening"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/activiteit11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:buttonTint="#FFFFFF"
                    android:text="Voedselweigering"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/activiteit12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:buttonTint="#FFFFFF"
                    android:text="Vreemde ondergronden"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/activiteit13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:buttonTint="#FFFFFF"
                    android:text="PrivÃ© vervoer"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/activiteit14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:buttonTint="#FFFFFF"
                    android:text="Openbare vervoer"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/activiteit15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:buttonTint="#FFFFFF"
                    android:text="Openbare plaatsen"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/activiteit16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:buttonTint="#FFFFFF"
                    android:text="Shopping"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/activiteit17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:buttonTint="#FFFFFF"
                    android:text="Horeca"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/activiteit18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:buttonTint="#FFFFFF"
                    android:text="Overige"
                    android:textColor="#FFFFFF" />
            </RadioGroup>
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="307dp"
        android:layout_height="105dp"
        android:layout_marginStart="60dp"

        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kiesSignaal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <CheckBox
                android:id="@+id/stresssignaal1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:buttonTint="#FFFFFF"
                android:text="Bevriezen"
                android:textColor="#FFFFFF" />

            <CheckBox
                android:id="@+id/stresssignaal2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:buttonTint="#FFFFFF"
                android:text="Gapen"
                android:textColor="#FFFFFF" />

            <CheckBox
                android:id="@+id/stresssignaal3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:buttonTint="#FFFFFF"
                android:text="Hijgen"
                android:textColor="#FFFFFF" />

            <CheckBox
                android:id="@+id/stresssignaal4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:buttonTint="#FFFFFF"
                android:text="Krabben"
                android:textColor="#FFFFFF" />

            <CheckBox
                android:id="@+id/stresssignaal5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:buttonTint="#FFFFFF"
                android:text="Oogwit"
                android:textColor="#FFFFFF" />

            <CheckBox
                android:id="@+id/stresssignaal6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:buttonTint="#FFFFFF"
                android:text="Tongelen"
                android:textColor="#FFFFFF" />

            <CheckBox
                android:id="@+id/stresssignaal7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:buttonTint="#FFFFFF"
                android:text="Trillen"
                android:textColor="#FFFFFF" />

            <CheckBox
                android:id="@+id/stresssignaal8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:buttonTint="#FFFFFF"
                android:text="Uitschudden"
                android:textColor="#FFFFFF" />

            <CheckBox
                android:id="@+id/stresssignaal9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:buttonTint="#FFFFFF"
                android:text="Wegkijken"
                android:textColor="#FFFFFF" />

            <CheckBox
                android:id="@+id/stresssignaal10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:buttonTint="#FFFFFF"
                android:text="Overige"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/niveau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="0"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/stressniveau"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3" />

    <ImageView
        android:id="@+id/toegevoegdeAfbeelding"
        android:layout_width="87dp"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toTopOf="@+id/opslaanActi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/afbeeldingToevoegen"
        app:layout_constraintTop_toBottomOf="@+id/seekBar"
        app:srcCompat="@drawable/legeafbeelding" />

    <EditText
        android:id="@+id/omschrijving"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="40dp"
        android:ems="10"
        android:hint="Geef een omschrijving (optioneel):"
        android:inputType="textMultiLine"
        android:maxLines="3"
        android:minHeight="48dp"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textColorLink="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Dagboek" />


</androidx.constraintlayout.widget.ConstraintLayout>