<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F44336">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:background="#F44336">

            <TextView
                android:id="@+id/textview_naam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Naam"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textStyle="bold"
                android:textColor="#832E2E"/>

            <TextView
                android:id="@+id/textview_onderwerp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Onderwerp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textStyle="bold"
                android:textColor="#832E2E"/>

            <TextView
                android:id="@+id/textview_datum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Datum"
                android:textColor="#832E2E"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/textview_uur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#832E2E"
                android:text="Uur"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/textview_bericht"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#832E2E"
                android:text="Bericht"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>