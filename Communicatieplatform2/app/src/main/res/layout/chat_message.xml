<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"

        app:cardBackgroundColor="#00FFFFFF"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00F44336"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewAnder"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_centerVertical="true"></ImageView>
            <TextView
                android:id="@+id/receiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="2dp"
                android:background="@drawable/ic_baseline_message_24"
                android:backgroundTint="#600808"
                android:maxWidth='250dp'
                android:padding="9dp"
                android:text="bericht"
                android:textColor="@android:color/white"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/imageViewIk"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                app:srcCompat="@drawable/legeafbeelding" />

            <TextView
                android:id="@+id/sender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:maxWidth='250dp'
                android:layout_margin="2dp"
                android:background="@drawable/ic_baseline_message_24"
                android:backgroundTint="#AE0C0C"
                android:padding="9dp"
                android:text="bericht"
                android:textColor="@android:color/white"
                android:textSize="15dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>