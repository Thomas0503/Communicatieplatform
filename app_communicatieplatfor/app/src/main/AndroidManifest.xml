<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.communicatieplatform">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/new_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/new_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CommunicatieplatformApp" >
        <activity android:name=".Homepage"
            android:exported="true">
        <intent-filter>
            <action android:name="android.intent.action.VIEW"/>
            <category android:name="android.intent.category.DEFAULT"/>
        </intent-filter>
            </activity>
        <activity android:name=".Dagboek"></activity>
        <activity android:name=".Kalender"></activity>
        <activity android:name=".Chat"></activity>
        <activity android:name=".DocumentenToevoegenActivity"></activity>
        <activity android:name=".DocumentActivity"></activity>
        <activity android:name=".AfspraakMaken"></activity>
        <activity android:name=".AfspraakActivity" />
        <activity android:name=".not_used_scripts.Welkom" />
        <activity
            android:name="com.communicatieplatform.MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
</manifest>